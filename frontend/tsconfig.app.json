{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "ESNext",           // Permite o uso de import.meta
    "target": "ESNext",           // Compatível com as novas funcionalidades JS
    "moduleResolution": "node",   // Resolução de módulos baseada no Node.js
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true                // Habilita o modo estrito de checagem
  }
}
